#!/bin/sh -e

case "$1" in
    purge)
        rm -rf <%= @config_dir -%>

        rm -rf <%= @link -%> <%= @install_dir -%>

        # Remove puppet log files
        rm -rf <%= @log_dir %>
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)


        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

exit 0
